<p id="notice"><%= notice %></p>

<h1>Welcome.  Here are your current accounts:</h1>

<table class="table">
  <thead>
    <tr>
      <th>Type</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @accounts.each != nil or @accounts.each != [] %>
      <% @accounts.each do |account| %>
        <tr>
          <td><%= link_to account.name, charges_by_account_path(account_id: account.id, name: account.name) %></td>
          <td><%= number_to_currency account.balance %></td>
          <td><%= link_to 'Edit', edit_account_path(account) %></td>
          <td><%= link_to 'Delete', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% else %>
      <p>You do not currently have any accounts.  Please create one.</p><br>
      <%= render "form" %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path %>
