<h1>All of your <%= @category %> charges</h1>

<table class="table">
  <thead>
    <tr>
      <th>Account</th>
      <th>Category</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.account.name %></td>
        <td><%= category.category %></td>
        <td><%= number_to_currency category.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>


