<p id="notice"><%= notice %></p>

<h1><%= @account.name %> Account</h1>

<table class="table">
  <thead>
    <tr>
      <th>Account</th>
      <th>Category</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% line_balance = @initial_balance %>
    <% @charges.each do |charge| %>
      <tr>
        <td><%= charge.account.name %></td>
        <td><%= link_to charge.category, categorize_path(category: charge.category) %></td>
        <td><%= number_to_currency charge.amount %></td>
        <td><%= link_to 'Info', charge %></td>
        <td><%= link_to 'Edit', edit_charge_path(charge) %></td>
        <td><%= link_to 'Delete', charge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h6>Current account total: <%= number_to_currency @account.balance %></h6>
<br>

<%= link_to 'New Charge', new_charge_path %>
